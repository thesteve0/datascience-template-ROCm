{
  "name": "{{PROJECT_NAME}} ROCm PyTorch ML Development",
  "build": {
    "dockerfile": "Dockerfile"
  },

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "{{DEV_USER}}",
      "uid": "{{DEV_UID}}",
      "gid": "{{DEV_UID}}",
      "upgradePackages": false
    },
    "ghcr.io/anthropics/devcontainer-features/claude-code:1": {}
  },

  "runArgs": [
    "--device=/dev/kfd",
    "--device=/dev/dri",
    "--group-add=video",
    "--group-add=105",
    "--ipc=host",
    "--shm-size=8G",
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined",
    "--memory=20g",
    "--cpus=8",
    "--ulimit=memlock=-1",
    "--ulimit=stack=67108864",
    "--mount", "type=bind,source=${env:SSH_AUTH_SOCK},target=/tmp/ssh-agent.sock",
    "--mount", "type=bind,source=${localEnv:HOME}/.config/gcloud,target=/home/stpousty-devcontainer/.config/gcloud,readonly",
    "--mount", "type=bind,source=${localEnv:HOME}/data,target=/data"
  ],

  "containerEnv": {
    "HIP_VISIBLE_DEVICES": "0",
    "ROCM_HOME": "/opt/rocm",
    "ROCBLAS_USE_HIPBLASLT": "1",
    "PYTORCH_CUDA_ALLOC_CONF": "expandable_segments:True",
    "PYTHONPATH": "/workspaces/{{PROJECT_NAME}}/src",
    "HF_HOME": "/workspaces/{{PROJECT_NAME}}/.cache/huggingface",
    "TORCH_HOME": "/workspaces/{{PROJECT_NAME}}/.cache/torch",
    "TRANSFORMERS_CACHE": "/workspaces/{{PROJECT_NAME}}/.cache/huggingface/transformers",
    "SSH_AUTH_SOCK": "/tmp/ssh-agent.sock",
    "VIRTUAL_ENV": "${containerWorkspaceFolder}/.venv",
    "ANTHROPIC_VERTEX_PROJECT_ID": "${localEnv:ANTHROPIC_VERTEX_PROJECT_ID}",
    "ANTHROPIC_VERTEX_REGION": "${localEnv:ANTHROPIC_VERTEX_REGION}",
    "CLAUDE_CODE_USE_VERTEX": "${localEnv:CLAUDE_CODE_USE_VERTEX}"
  },

  // No volume mounts needed - VSCode bind-mounts the entire workspace folder by default.
  // models/, datasets/, .cache/ are regular project directories visible from both host and container.

  "workspaceFolder": "/workspaces/{{PROJECT_NAME}}",
  "remoteUser": "{{DEV_USER}}",

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "files.watcherExclude": {
          "**/.cache/**": true,
          "**/models/**": true,
          "**/datasets/**": true
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "github.copilot",
        "ms-toolsai.jupyter"
      ]
    },
    "jetbrains": {
      "backend": "PY",
      "plugins": []
    }
  },

  "forwardPorts": [6006, 8888],

  "postCreateCommand": ".devcontainer/setup-environment.sh",

  "postStartCommand": "cat /workspaces/${localWorkspaceFolderBasename}/GETTING_STARTED.md 2>/dev/null || true",

  "hostRequirements": {
    "gpu": "optional",
    "memory": "24gb"
  }
}